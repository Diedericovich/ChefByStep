    <h2>Our recipes</h2>
    <div id="myBtnContainer">
        <button class="btn active btn-filter" onclick="filterSelection('all')"> Show all</button>
        @foreach (var category in Enum.GetNames(typeof(Category)))
        {
            <button class="btn" onclick="filterSelection('@category')"> @category</button>
        }
