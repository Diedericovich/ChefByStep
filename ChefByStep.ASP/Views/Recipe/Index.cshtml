@model RecipeViewModel

<div class="overview">
    <h2>All recipes</h2>
    <div id="list1" class="dropdown-check-list" tabindex="100">
        <span class="anchor">Filter</span>
        <ul class="items">
            <li><input type="checkbox" id="breakfast"/>Breakfast </li>
            <li><input type="checkbox" id="lunch"/>Lunch</li>
            <li><input type="checkbox" id="dinner"/>Dinner </li>
            <li><input type="checkbox" id="dessert"/>Dessert </li>
        </ul>
    </div>
    <div class="row recipe-row">
        @*@if (#breakfast == checked)
        {

        }*@
        @foreach (var recipe in Model.Recipes)
        {
            <div class="card overview-tile" style="width: 18rem;">
                <a asp-area="" asp-controller="Recipe" asp-action="Detail" asp-route-id="@recipe.Id">
                    <img class="card-img-top recipe-img" src="@recipe.ImageUrl" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="recipe-overview-text">@recipe.Title</h5>
                    </div>
                </a>
            </div>
        }
    </div>
</div>

