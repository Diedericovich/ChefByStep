@model RecipeDetailViewModel
@{
    List<Step> progress = Model.Steps;
    int index = 1;
    int trackerIndex = 1;

    void changeToDone(int id)
    {
        Model.Steps.FirstOrDefault(x => x.Id == id).IsDone = true;

    }
}
<div class="overview">
    <div class="row">
        <div class="col-7">
            <h1>@Model.Title</h1>
            <div class="container">
                <div id="carouselContent" class="carousel slide vertical" data-ride="carousel" data-interval="false" data-wrap="false">
                    <div class="carousel-inner" role="listbox">
                        @foreach (var step in Model.Steps)
                        {
                            @if (index == 1)
                            {
                                <div class="carousel-item active  p-4 justify-content-center">
                                    <h5>Step @index</h5>
                                    <p>@step.Instruction</p>
                                    <input type="submit" title="Done" />
                                </div>
                            }
                            else
                            {
                                <div class="carousel-item p-4 justify-content-center">
                                    <h5>Step @index</h5>
                                    <p>@step.Instruction</p>
                                    <input type="submit" title="Done" />
                                </div>
                            }
                            index++;
                        }
                    </div>
                    <a class="carousel-control-prev" href="#carouselContent" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon-" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselContent" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-5">
            <div class="row">
                <img src="@Model.ImageUrl" class="detail-img" />
            </div>
            <h3>Track your progress</h3>
            @foreach (var step in Model.Steps)
            {
                <div class="row">
                    <div class="align-content-start">
                        <input type="checkbox" asp-for="@step.IsDone" id="@step.Id" name="@step.Id">Step @trackerIndex
                    </div>
                </div>
                trackerIndex++;
            }
        </div>
    </div>
</div>

<script type="text/javascript">

    function aspcheck1True(id) {
        document.getElementById(id).checked = false;
    }

    function aspcheck2True(id) {
        document.getElementById(id).checked = false;
    }
</script>