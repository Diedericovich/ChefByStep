@model RecipeDetailViewModel

<div class="overview">
    <div class="row">
        <div class="col-sm-12 col-md-6 col-lg-6">
            <div>
                <img class="detail-img" src="@Model.ImageUrl" />
                <div>@Model.Title</div>
            </div>
            <div>
                <div>
                    @foreach (var ingredient in @Model.Ingredients)
                    {
                        <ul>
                            <li>
                                @ingredient.Name
                            </li>
                        </ul>
                    }
                </div>
                <div>
                    <p>@Model.Description</p>
                </div>

            </div>
        </div>
        <div class="col-sm-12 col-md-6 col-lg-6">
            <div class="cooking-div" id="start-cooking">
                <a href="#" class="prev" onclick="prev()">Previous</a>
                <a href="#" class="next" onclick="next()">Next</a>
                <ul>
                    @for (int i = 1; i < Model.Steps.Count; i++)
                    {
                        @*<div class="step-div" id="steps" onclick="toggleStepByStep()">
                            <p>Step: @i</p>
                            <p id="step-intruction">@Model.Steps[i].Instruction</p>
                        </div>*@

                        <li class="li list-group-item">
                            <div class="step-list" id="steps" onclick="toggleStepByStep()">
                                <p>Step: @i</p>
                                <div id="step-div" onclick="myFunction()">
                                    <p class="collapse" id="step-intruction">@Model.Steps[i].Instruction</p>
                                </div>
                            </div>
                        </li>
                    }

                </ul>
            </div>
        </div>
        <div class="btn-cook">
            <a class="btn nav-link" href="#start-cooking" onclick="toggleSteps()" id="startCooking">Start Cooking</a>
        </div>
    </div>
</div>
