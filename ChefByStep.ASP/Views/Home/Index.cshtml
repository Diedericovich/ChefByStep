@{
    ViewData["Title"] = "Home Page";
}
@{ 
    Random random = new Random();
    int randomId = random.Next(1, 5);
}
<div class="overview">
    <div>
        <div class="float-left header">
            <div class="header-title">
                <p>Tired of not being able to cook properly?</p>
                <p>Try out our new Chef-By-Step!</p>
            </div>
            <p class="decriptive-header">Try out any recipe from our library that contains +200 recipes.</p>
            <a class="btn overview-btn" asp-area="" asp-controller="Recipe" asp-action="Index">View recipes</a>
        </div>
        <div class="float-right header">
            <img src="https://static.ah.nl/static/recepten/img_RAM_PRD143856_1600x_JPG.jpg" class=" header-img" width="450" />
        </div>
        <div class="overview-title">
            <p class="random-recipe">Surprise me with a recipe!</p>
            <a class="btn random-btn" asp-area="" asp-controller="Recipe" asp-action="Detail" asp-route-id=@randomId>Start to cook!</a>
        </div>
    </div>
    <div>
        <div class="overview-title">
            <p>Popular recipes</p>
        </div>
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="https://www.euractiv.com/wp-content/uploads/sites/2/2020/02/shutterstock_1416435458-800x450.jpg" alt="First slide">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>Sloppy Joe</h5>
                            <p>Sloopy hamburger, easy to make.</p>
                        </div>
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="https://freshhh.nl/app/uploads/2019/07/bistro-croquant-suggestie-290ef.jpg" alt="Second slide">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>3-way meatballs</h5>
                        <p>Never know anything to serve your guests? Think no more, these appetizers are a fit for everyone!</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="https://www.houseoftalents.be/files/cache/large/files/good-food-good-mood-ribeye-800x450-60631e9c3ef0c.png" alt="Third slide">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Irish Ribeye</h5>
                        <p>Rare, medium-rare or well-done, anything goes! (disclaimer: best cooded rare or medium-rare ;) )</p>
                    </div>
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
       
</div>