@{
    ViewData["Title"] = "Home Page";
}
@model RecipeViewModel
@{
    Random random = new Random();
    int randomId = random.Next(1, 45);
    int randomId2 = random.Next(1, 45);
    int randomId3 = random.Next(1, 45);
    int randomId4 = random.Next(1, 45);

    Recipe recipe1 = new Recipe();
    Recipe recipe2 = new Recipe();
    Recipe recipe3 = new Recipe();

    recipe1 = Model.Recipes.ElementAt(randomId2);
    recipe2 = Model.Recipes.ElementAt(randomId3);
    recipe3 = Model.Recipes.ElementAt(randomId4);

}
<div class="overview">
    <div class="mb-5">
        <div class="row">
            <div class="col-sm-12 col-md-4 col-lg-5">
                <div class="header-title">
                    <p>Tired of not being able to cook properly?</p>
                    <p>Try out our new <br />Chef-By-Step!</p>
                </div>
                <p class="decriptive-header">Try out any recipe from our library that contains +200 recipes.</p>
                <a class="btn overview-btn" asp-area="" asp-controller="Recipe" asp-action="Index">View recipes</a>
            </div>
            <div class="col-sm-12 col-md-8 col-lg-7">
                <img class="header-img"  src="https://images.food52.com/UL7ZymgTTVQHQVJHPZtbwYjAHIA=/1008x672/filters:format(webp)/6847c864-39cb-496b-8730-0d98d4ea6225--2016-0330_polenta-cakes-with-caramelized-onions-goat-cheese-and-honey_alpha-smoot_370.jpg" />
            </div>
        </div>
        <div class="overview-title-random">
            <p class="random-recipe">Surprise me with a recipe!</p>
            <a class="btn random-btn" asp-area="" asp-controller="Recipe" asp-action="Detail" asp-route-id=@randomId>Start cooking!</a>
        </div>
    </div>

    <div class="mb-5">
        <div class="overview-title">
            <p>Popular recipes</p>
        </div>
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="@recipe1.ImageUrl" alt="First slide">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>@recipe1.Title</h5>
                        <p>@recipe1.Description</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="@recipe2.ImageUrl" alt="Second slide">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>@recipe2.Title</h5>
                        <p>@recipe2.Description</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="@recipe3.ImageUrl" alt="Third slide">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>@recipe3.Title</h5>
                        <p>@recipe3.Description</p>
                    </div>
                </div>
            </div>
            <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>

    <div>
        <div class="chef-overview-title">
            <p>Our top chefs</p>
            <div class="row chef-row">
                <div class="col-sm-12 col-md-6 col-lg-3 ">
                    <img class="chef-img" src="https://images.squarespace-cdn.com/content/v1/51c1efe0e4b0b485e9579892/1499801823670-U7VP5UKDCOD8QH9UHZL4/ke17ZwdGBToddI8pDm48kJDhnYp150d284weEUcE99JZw-zPPgdn4jUwVcJE1ZvWQUxwkmyExglNqGp0IvTJZUJFbgE-7XRK3dMEBRBhUpzEhuHAZIvcOJXKHaK0IYA2FqQROTPv4Mp07VJTvhE0PNP7kjTIUmSMmot9ODR8CEk/Chefs_2_06.jpg" />
                    <div class="picBox">Simon</div>
                </div>
                <div class="col-sm-12 col-md-6 col-lg-3 ">
                    <img class="chef-img" src="https://images.squarespace-cdn.com/content/v1/51c1efe0e4b0b485e9579892/1499801856585-DMXZCRCAL0LS2BNVNFLH/Chefs_2_22.jpg?format=1000w" />
                    <div class="picBox">Jens</div>
                </div>
                <div class="col-sm-12 col-md-6 col-lg-3 ">
                    <img class="chef-img" src="https://images.squarespace-cdn.com/content/v1/51c1efe0e4b0b485e9579892/1499801831247-4A7K55I6T4KLM13LKU3O/Chefs_2_10.jpg?format=1000w" />
                    <div class="picBox">Emma</div>
                </div>
                <div class="col-sm-12 col-md-6 col-lg-3 ">
                    <img class="chef-img" src="https://images.squarespace-cdn.com/content/v1/51c1efe0e4b0b485e9579892/1499801847614-IOQS0QZQ2KFVBHVQF1DT/Chefs_2_18.jpg?format=1000w" />
                    <div class="picBox">Diederik</div>
                </div>
            </div>
        </div>
    </div>
</div>