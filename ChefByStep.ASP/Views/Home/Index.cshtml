@{
    ViewData["Title"] = "Home Page";
}

<div class="overview">
    <div>
        <div class="float-left header">
            <div class="header-title">
                <p>Tired of not being able to cook properly?</p>
                <p>Try out our new Chef-By-Step!</p>
                
            </div>
            <p class="decriptive-header">Try out any recipe from our library that contains +200 recipes.</p>
            <button class="btn overview-btn">View recipes</button>
        </div>
        <div class="float-right header">
            <img src="https://static.ah.nl/static/recepten/img_RAM_PRD143856_1600x_JPG.jpg" class=" header-img" width="450" />
        </div>
        <div class="overview-title">
            <p class="random-recipe">Surprise me with a recipe!</p>
            <button class="btn random-btn">Start to cook!</button>
        </div>
    </div>
    <div>
        <div class="overview-title">
            <p>Popular recipes</p>
        </div>
        <div id="myCarousel" class="carousel slide horizontal" data-ride="carousel" style="overflow: hidden">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>
            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="item active">
                    <label>Sloppy joe</label>
                    <img src="https://www.euractiv.com/wp-content/uploads/sites/2/2020/02/shutterstock_1416435458-800x450.jpg" alt="" style="width: 100%;">
                </div>

                <div class="item">
                    <label>3-way meatballs</label>
                    <img src="https://freshhh.nl/app/uploads/2019/07/bistro-croquant-suggestie-290ef.jpg" alt="" style="width: 100%;">
                </div>

                <div class="item">
                    <label>Irish ribeye</label>
                    <img src="https://www.houseoftalents.be/files/cache/large/files/good-food-good-mood-ribeye-800x450-60631e9c3ef0c.png" alt="" style="width: 100%;">
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" data-target="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" data-target="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>