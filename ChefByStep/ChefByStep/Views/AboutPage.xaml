<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ChefByStep.Views.AboutPage"
             xmlns:vm="clr-namespace:ChefByStep.ViewModels"
             Title="ChefByStep">
    
    <ContentPage.BindingContext>
        <vm:AboutViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <StackLayout>
            <SearchBar Placeholder="Find a Recipe"/>

            <CarouselView ItemsSource="{Binding Recipes}"
                  PeekAreaInsets="100"
                  Loop="True"
                  HeightRequest="300">

                <CarouselView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout>
                            <Frame HeightRequest="280"
                               WidthRequest="180"
                               BackgroundColor="white"
                               HasShadow="True"
                               CornerRadius="10"
                               Padding="0"
                               Margin="10"
                               HorizontalOptions="CenterAndExpand">
                                <Grid>
                                    <StackLayout BackgroundColor="Black">
                                        <Image Source="{Binding ImgUrl}"
                                           Aspect="AspectFit"
                                           Opacity="0.8" />
                                    </StackLayout>
                                    <StackLayout>
                                        <Image Source="icon_bookmark.png"
                                           HeightRequest="60"
                                           Aspect="AspectFit"
                                           HorizontalOptions="EndAndExpand"
                                           Margin="0,-10,0,0" />
                                        <Label Text="{Binding Title}"
                                           TextColor="white"
                                           FontSize="24"
                                           FontAttributes="Bold"
                                           Margin="15, 0"
                                           VerticalOptions="EndAndExpand" />

                                        <StackLayout Orientation="Horizontal"
                                                 Margin="15, -10,0,0">
                                            <Image Source="icon_map1.png"
                                               HeightRequest="20"
                                               Aspect="AspectFit" />
                                            <Label Text="{Binding Description}"
                                               TextColor="white"
                                               FontSize="14"
                                               VerticalOptions="EndAndExpand" />
                                        </StackLayout>
                                    </StackLayout>

                                    <Grid.GestureRecognizers>
                                        <TapGestureRecognizer
                                    NumberOfTapsRequired="1"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type vm:AboutViewModel}},
                                              Path=ItemTapped}"
                                    CommandParameter="{Binding .}"/>
                                    </Grid.GestureRecognizers>



                                </Grid>
                            </Frame>

                        </StackLayout>


                    </DataTemplate>
                </CarouselView.ItemTemplate>
            </CarouselView>
            
            
        </StackLayout>

        




    </ScrollView>

    


</ContentPage>
